{
  "reporter": ["html", "text", "json", "lcov"],
  "reports-dir": "./coverage",
  "temp-directory": "./coverage/.nyc_output",
  "exclude": [
    "coverage/**",
    "test-results/**",
    "playwright-report/**",
    "tests/**",
    "playwright/**",
    "node_modules/**",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.config.ts",
    "**/*.config.js",
    "**/*.config.mjs",
    "**/next.config.js",
    "**/tailwind.config.ts",
    "**/postcss.config.js",
    "**/.next/**",
    "**/public/**",
    "**/supabase/**",
    "**/types/**",
    "**/docs/**"
  ],
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "lib/**/*.ts",
    "utils/**/*.ts",
    "services/**/*.ts",
    "stores/**/*.ts",
    "hooks/**/*.ts"
  ],
  "extension": [".ts", ".tsx"],
  "cache": true,
  "all": true,
  "check-coverage": true,
  "lines": 70,
  "functions": 70,
  "branches": 60,
  "statements": 70
}
